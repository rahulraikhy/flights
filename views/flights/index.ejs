<%- include('../partials/header') %>

    <h1>All Flights</h1>

    <table id="list">
        <thead>
            <th>Airline</th>
            <th>Airport</th>
            <th>FlightNo</th>
            <th>Departs</th>
        </thead>
        <tbody>
            <% flights.forEach(function(flight) { %>
                <tr>
                    <td>
                        <%= flight.airline %>
                    </td>
                    <td>
                        <%= flight.airport %>
                    </td>
                    <td>
                        <%= flight.flightNo %>
                    </td>
                    <td>
                        <%= flight.departs %>
                    </td>
                    <td>
                    <td><a href="/flights/<%= flight._id %>">DETAILS</a></td>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>